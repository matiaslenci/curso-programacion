---
import "@fontsource-variable/space-grotesk";
import Header from "../sections/Header.astro";
import PrerequisitesSection from "../sections/PrerequisitesSection.astro";
import ThemeLineSection from "../sections/ThemeLineSection.astro";
import ModalitySection from "../sections/ModalitySection.astro";
import ProfessorSection from "../sections/ProfessorSection.astro";
import Footer from "../sections/Footer.astro";
import ContactSection from "../sections/ContactSection.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Curso de desarrollo web Full Stack" />
    <meta property="og:url" content="https://curso-programacion-matiaslenci.vercel.app/" />
    <meta property="og:image" content="/assets/programmer.webp" />
    <meta
      property="og:description"
      content="Aprende a crear aplicaciones web dinámicas y funcionales, dominando tanto el frontend como el backend del desarrollo. Desde HTML, CSS y JavaScript hasta Node.js, Express y bases de datos, este curso te equipará con las herramientas y conocimientos necesarios para construir aplicaciones web modernas y escalables."
    />
    <title>Curso de desarrollo web Full Stack | Matias Lenci</title>
  </head>
  <body class="max-w-3xl mx-auto min-h-screen px-6 sm:px-8 text-white">
    <Header />
    <ThemeLineSection />
    <PrerequisitesSection />
    <ModalitySection />
    <!--    <ProfessorSection /> -->
    <ContactSection />
    <Footer />
  </body>

  <style is:global>
    body {
      background-color: rgb(19, 14, 39);
      font-family: "Space Grotesk Variable", sans-serif;
    }
  </style>
</html>
